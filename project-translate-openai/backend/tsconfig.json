{
  "compilerOptions": {
    "types": ["node"],
    "target": "es2020",
    "module": "CommonJS",
    "lib": ["ES6", "DOM"],
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": ["types", "./node_modules/@types"],
  },
  "include": [
    "src/**/*.ts",
    "types/**/*.d.ts"
  ],
  "exclude":[
    "./node_modules" , "./dist"
  ]
}
